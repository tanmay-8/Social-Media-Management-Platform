# Example environment variables for Social Media Management Platform (server)
# Copy this file to .env and replace placeholder values before running.

# Server settings
PORT=3000
NODE_ENV=development

# MongoDB connection string (local or Atlas)
MONGODB_URI=mongodb://localhost:27017/social-media-platform

# JWT secret used to sign tokens. MUST be 64+ random characters in production.
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_random_64_char_jwt_secret_change_this_in_production_use_crypto_random

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_CONFIG_ID=your_facebook_configuration_id_here

# URLs for OAuth redirects
SERVER_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# Razorpay credentials (optional â€” required for payments)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Path to festivals CSV file used by /api/festivals
# Default expects the file at the given relative path from server folder.
FESTIVALS_CSV_PATH=./festivals.csv

# CORS Configuration - REQUIRED in production
# Set to your frontend domain (e.g., https://yourdomain.com)
CORS_ALLOWED_ORIGIN=http://localhost:5173

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Admin email for admin-only endpoints (comma separated for multiple)
ADMIN_EMAIL=admin@example.com
